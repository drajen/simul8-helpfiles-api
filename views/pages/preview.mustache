{{> header }}

<div class="container mt-5">

  <div class="mt-4 mb-2">
    <a href="/dashboard?view=help" class="btn btn-secondary"> ‚Üê Back to Help Files</a>
  </div>

  <hr>
  <h1>{{title}}</h1>
  <hr>

  {{#parsed_sections}}
    <h3>{{section_title}}</h3>
    <div class="parsed-content">
      {{{html}}}
    </div>
  {{/parsed_sections}}

  {{#seeAlsoLinks.length}}
    <hr>
    <h4>See Also</h4>
    <ul>
      {{#seeAlsoLinks}}
        <li><a href="/preview/{{document_id}}">{{link_text}}</a></li>
      {{/seeAlsoLinks}}
    </ul>
  {{/seeAlsoLinks.length}}

  <div class="mt-4 mb-5">
    <a href="/export/helpfile/markdown/{{document_id}}" class="btn btn-outline-primary">Export as Markdown</a>
    <a href="/export/helpfile/json/{{document_id}}" class="btn btn-outline-dark">Export as JSON</a>
    <button class="btn btn-outline-secondary" onclick="window.print()">üñ®Ô∏è Print</button>
  </div>
</div>