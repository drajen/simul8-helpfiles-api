{{> header }}

<div class="container mt-5">
  <h2 class="mb-4">Preview: {{file.media_id}}</h2>

  <div class="card shadow-sm p-4">
    <p><strong>File Type:</strong> {{file.type}}</p>
    <p><strong>Tags:</strong> {{#file.tags}}<span class="badge badge-info">{{.}}</span> {{/file.tags}}</p>

    {{#file.used_in_help_files.length}}
      <p><strong>Used in Help Files:</strong>
        {{#file.used_in_help_files}}
          <span class="badge badge-primary">{{document_id}}</span>
        {{/file.used_in_help_files}}
      </p>
    {{/file.used_in_help_files.length}}

    {{#file.media_url}}
      <div class="text-center mt-4">
        <img src="{{file.media_url}}" class="img-fluid" alt="Preview" style="max-height: 400px;" />
      </div>
    {{/file.media_url}}

    {{^file.media_url}}
      <div class="alert alert-warning mt-3">No preview available.</div>
    {{/file.media_url}}
  </div>

  <div class="mt-4">
    <a href="/dashboard?view=media" class="btn btn-secondary">‚Üê Back to Media Files</a>
  </div>
</div>