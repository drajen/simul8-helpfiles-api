{{> header }}

<div class="container-fluid p-4">
  <a href="/dashboard" class="btn btn-link">&larr; Back to Dashboard</a>
  <h2 class="mb-4">{{title}}</h2>

  <form method="POST" action="/helpfiles/{{document_id}}/edit">

    <div class="form-group">
    <label for="docId">Document ID</label>
    <input id="docId" name="document_id" class="form-control" value="{{document_id}}" readonly placeholder="e.g., features:actions">
    </div>

    <div class="form-group">
    <label for="title">Title</label>
    <input id="title" name="title" class="form-control" value="{{titleValue}}" placeholder="Enter title for help file">
    </div>

    <div class="form-group">
    <label for="category">Category</label>
    <input id="category" name="category" class="form-control" value="{{category}}" placeholder="e.g., features, example">
    </div>

    <div class="form-group">
    <label for="section_title">Section Title</label>
    <input id="section_title" name="section_title" class="form-control" value="{{section.section_title}}" placeholder="e.g., Main, Usage">
    </div>

    <div class="form-group">
    <label for="section_text">Section Text</label>
    <textarea id="section_text" name="section_text" class="form-control" rows="8" placeholder="Add the body content here...">{{section.text}}</textarea>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
  </form>
</div>