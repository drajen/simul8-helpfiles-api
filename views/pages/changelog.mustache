{{> header }}

<div class="main-content mt-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <h2 class="mb-4 text-center">Change Log</h2>

            {{#logs.length}}
              <ul class="list-group">
                {{#logs}}
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <strong class="text-capitalize text-primary">{{action}}</strong>
                      on <span class="text-monospace text-danger">{{document_id}}</span>
                    </div>
                    <small class="text-muted">{{timestamp}}</small>
                  </li>
                {{/logs}}
              </ul>
            {{/logs.length}}

            {{^logs.length}}
              <div class="alert alert-info text-center">No changes logged yet.</div>
            {{/logs.length}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>